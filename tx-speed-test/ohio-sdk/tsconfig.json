{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2020",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "commonjs",
    "pretty": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "sdk",
    "src"
  ],
  "exclude": ["node_modules"]
}
